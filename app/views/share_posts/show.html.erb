<div class="row">
  <aside class="col-md-4">
    <%= render partial: 'shared/user_info', locals: { user: @share_post.user }  %>
  </aside>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= html_escape(@share_post.title) %>
        </h3>
      </div>
      <div class="panel-body">
        <%= simple_format(html_escape(@share_post.comment)) %>
      </div>
      <div class="panel-footer">
        投稿日時: <%= @share_post.created_at.to_s(:created_at) %>
      </div>
    </div>
    <% if current_user == @share_post.user %>
      <%= link_to "編集", edit_share_post_path(@share_post), class: "btn btn-primary" %>
      <%= link_to "削除", @share_post, method: :delete, class: "btn btn-primary",
                                       data: { confirm: "You sure?" } %>
    <% end %>

  </div>
</div>

<%= link_to "戻る", :back %>
