<div class="row">
  <aside class="col-md-4">
    <%= render partial: 'shared/user_info', locals: { user: @bowel.user }  %>
  </aside>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading bowel-panel-heading">
        <h3 class="panel-title bowel-panel-title">
          <%= feeling_image_for(@bowel) %>
          <%= stool_image_for(@bowel) %>
          <%= stool_amount_for(@bowel) %>
        </h3>
      </div>
      <div class="panel-body">
        <%= simple_format(html_escape(@bowel.comment)) %>
      </div>
      <div class="panel-footer">
        発生時刻: <%= @bowel.occurred_at.to_s(:created_at) %><br/>
      </div>
    </div>

    <% if current_user == @bowel.user %>
      <%= link_to "編集", edit_bowel_path(@bowel), class: "btn btn-primary" %>
      <%= link_to "削除", @bowel, method: :delete, class: "btn btn-primary",
                                       data: { confirm: "You sure?" } %>
    <% end %>

  </div>
</div>

<%= link_to "戻る", :back %>
