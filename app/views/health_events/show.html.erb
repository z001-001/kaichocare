<div class="row">
  <aside class="col-md-4">
    <%= render partial: 'shared/user_info', locals: { user: @health_event.user }  %>
  </aside>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= feeling_image_for(@health_event) %>
          <%= html_escape(@health_event.title) %>
        </h3>
      </div>
      <div class="panel-body">
        <%= simple_format(html_escape(@health_event.comment)) %>
      </div>
      <div class="panel-footer">
        発生時刻: <%= @health_event.occurred_at.to_s(:created_at) %><br/>
        <% if @health_event.ended_at %>
          終了時刻: <%= @health_event.ended_at.to_s(:created_at) %>
        <% end %>
      </div>
    </div>

    <% if current_user == @health_event.user %>
      <%= link_to "編集", edit_health_event_path(@health_event), class: "btn btn-primary" %>
      <%= link_to "削除", @health_event, method: :delete, class: "btn btn-primary",
                                       data: { confirm: "You sure?" } %>
    <% end %>

  </div>
</div>

<%= link_to "戻る", :back %>
