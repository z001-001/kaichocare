<%= form_for(@health_event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, placeholder: "タイトル...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment, class: "control-label" %>
    <%= f.text_area :comment, placeholder: "コメント...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :feeling %>
    <div>
      <label for="bowel_feeling_1">
        <%= f.radio_button :feeling, "1" %>
        <%= image_tag "feeling_1.png", alt: "良好" %>
      </label>
      <label for="bowel_feeling_2">
        <%= f.radio_button :feeling, "2" %>
        <%= image_tag "feeling_2.png", alt: "まずます" %>
      </label>
      <label for="bowel_feeling_3">
        <%= f.radio_button :feeling, "3" %>
        <%= image_tag "feeling_3.png", alt: "悪い" %>
      </label>
    </div>
  </div>
  <!--
  <div class="form-group">
    <%#= f.label :feeling, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.select :feeling, ["(good)", "(bad)" ] %>
    </div>
  </div>
  -->

  <div class="form-group">
    <%= f.label :occurred_at, class: "control-label" %>
    <%= f.datetime_local_field :occurred_at, class: "form-control" %>
  </div>
<!--
  <div class="form-group">
    <%#= f.label :occurred_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.text_field :occurred_at, data: { :date_format => 'YYYY/MM/DD hh:mm' }, :class => 'form-control datetimepicker', placeholder: 'YYYY/MM/DD hh:mm' %>
      <%#= f.datetime_local_field :occurred_at, class: "form-control" %>
    </div>
  </div>
-->

  <div class="form-group">
    <%= f.label :ended_at, class: "control-label" %>
    <%= f.datetime_local_field :ended_at, class: "form-control" %>
  </div>
<!--
  <div class="form-group">
    <%#= f.label :ended_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.datetime_local_field :ended_at, class: "form-control" %>
    </div>
  </div>
-->

  <div class="form-group">
    <%= f.label :public_level, class: "control-label" %>
    <%= f.select :public_level, public_level_list,
        #[["既定値", 0], ["公開", 5], ["公開(概要)", 4], ["友達のみ", 3], ["友達のみ(概要)", 2], ["非公開", 1]],
        class: "form-control" %>
  </div>
<!--
  <%# @health_event.public_level = 0 %>
  <%#= f.hidden_field :public_level %>
-->
  <div class="form-group actions">
    <%= f.submit "送信", class: "btn btn-large btn-primary" %>
  </div>
  <%#= f.submit "Post", class: "btn btn-primary" %>
<% end %>
