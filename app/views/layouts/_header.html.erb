  <header>
    <nav class="navbar navbar-default">
      <div class="container">
        <!-- ヘッダ情報 -->
        <div class="logo">
          <%= link_to "快ちょう管理", root_path, class: "navbar-brand" %>
        </div>
        <!-- リストの配置 -->
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".home"),   root_path %></li>
          <li><%= link_to t(".help"),   '#' %></li>

          <% if user_signed_in? %>
            <%= form_tag search_path, method: 'get', class: "navbar-form navbar-left",
                          role: "search" do |f| %>
              <div class="input-group">
                <%= text_field_tag "q", "", placeholder: '検索', class: "form-control"  %>
                <span class="input-group-btn">
                  <%= button_tag type: "submit", class: "btn btn-default" do %>
                    <span class="glyphicon glyphicon-search"></span>
                  <% end %>
                </span>
              </div>
            <% end %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(".account") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".settings"), edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".log_out"), destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".sign_up"), new_user_registration_path %></li>
            <li><%= link_to t(".log_in"), new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
