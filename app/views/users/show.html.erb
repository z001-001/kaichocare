<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.share_posts.any? %>
      <h3>Share posts (<%= @user.share_posts.count %>)</h3>
      <ol class="share_posts">
        <%= render @share_posts %>
      </ol>
    <% end %>
  </div>
</div>
